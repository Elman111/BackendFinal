@model List<Teachers>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Teacher Table</h4>
                    <p class="card-description">
                        <a asp-controller="teacher" asp-action="Create"> <btn style="background-color:lawngreen;cursor:pointer;padding:10px"> Create </btn>  </a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>

                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Desc</th>
                                   @* <th>Facebook</th>
                                    <th>Instagram</th>
                                    <th>LinkedIn</th>
                                    <th>Whatsapp</th>*@
                                    <th>Settings</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img width="100" height="100" src="~/img/teacher/@item.ImageUrl" />
                                        </td>


                                        <td>
                                            <p>@item.Name</p>
                                        </td>

                                        <td>
                                            <p>@item.Desc</p>
                                        </td>

                                       @* <td>
                                            <p>@item.Facebook</p>
                                        </td>

                                             <td>
                                            <p>@item.Instagram</p>
                                        </td>


                                             <td>
                                            <p>@item.LinkedIn</p>
                                        </td>



                                             <td>
                                            <p>@item.Whatsapp</p>
                                        </td>
*@
                                        <td >
                                            <a asp-action="delete" asp-route-id="@item.Id"> <btn style="background-color:red;cursor:pointer;position:absolute;margin-top:-50px;padding:10px"> Delete </btn></a>
                                            <a asp-action="update" asp-route-id="@item.Id"> <btn style="background-color:chartreuse;cursor:pointer;position:absolute;margin-top:5px;padding:7px"> Update </btn></a>

                                            <a asp-action="detail" asp-route-id="@item.Id"> <btn style="background-color:aqua;cursor:pointer;position:absolute;margin-left:70px;margin-top:-15px;padding:7px"> Detail </btn></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>